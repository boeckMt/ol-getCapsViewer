.search-view{
  margin-top: -64px;
  height: 64px;
  nav{
    background: rgba(0, 0, 0, 0) none repeat scroll 0 0;
    box-shadow: 0 0 0 0 rgba(0, 0, 0, 0), 0 0 0 0 rgba(0, 0, 0, 0);
  }

  .input-field{
    height: 64px;
  }

  select {
    cursor: pointer;
    display: block;
    margin: 0px;
    border: 1px solid #111;
    background: transparent;
    width: 150px;
    padding: 5px 35px 5px 5px;
    font-size: 16px;
    border: none;
    height: 4rem;
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    background: no-repeat #EE6E73;
    &:focus{
      color: #000;
      background: no-repeat #fff;
    }

    option {
      padding:1em;
      border: none;
      [selected="selected"]{
        color: #000;
        background: no-repeat #EE6E73;
      }
    }
  }
}

.list-view{
  height: 800px;
  overflow-y: scroll;
